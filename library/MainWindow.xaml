<Window x:Class="library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:library"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#F5F5DC">
   
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="105*" />
            <ColumnDefinition Width="88*"/>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="149*"/>
            <ColumnDefinition Width="174*"/>
            <ColumnDefinition Width="203*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="297*"/>
            <RowDefinition Height="97*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Название" 
                   FontSize="19" HorizontalAlignment="Center" 
                   VerticalAlignment="Center" Height="26" Width="83"/>
        <TextBlock Text="Автор" 
           Grid.Column="1" 
           FontSize="19" HorizontalAlignment="Center" 
           VerticalAlignment="Center" Height="26" Width="53"/>
        <TextBlock Text="Жанр" 
           Grid.Column="2" 
           FontSize="19" HorizontalAlignment="Center" 
           VerticalAlignment="Center" Height="26" Width="48"/>
        <TextBlock Text="Личный рейтинг" 
           Grid.Column="3" 
           FontSize="19" HorizontalAlignment="Center" 
           VerticalAlignment="Center" Height="26" Width="144"/>
        <TextBlock Text="Дата добавления" 
           Grid.Column="4" 
           FontSize="19" HorizontalAlignment="Center" 
           VerticalAlignment="Center" Height="26" Width="164"/>
        <ListBox Background="#F5F5DC" Grid.Row="1" Grid.ColumnSpan="5" x:Name="LibrListLb">
            
        </ListBox>

        <StackPanel Grid.Column="5" Grid.RowSpan="3">
            <StackPanel Margin="0 0 0 20">
                <TextBlock Text="Статистика" FontSize="19" HorizontalAlignment="Center" 
VerticalAlignment="Center" Margin="7"/>
                <TextBlock Text="Количество книг:" FontSize="12" HorizontalAlignment="Left" 
VerticalAlignment="Center" Margin="7" />
                <TextBlock Text="Количество прочитанных:" FontSize="12" HorizontalAlignment="Left" 
VerticalAlignment="Center" Margin="7" />
                <TextBlock Text="Средний рейтинг:" FontSize="12" HorizontalAlignment="Left" 
VerticalAlignment="Center" Margin="7" />
            </StackPanel>
            <StackPanel Margin="0 0 0 20">
                <Button Content="Добавить" FontSize="19" HorizontalAlignment="Center" 
VerticalAlignment="Center" Margin="7" Width="190" Background="#F5F5DC" BorderThickness="2"/>
                <Button Content="Редактировать" FontSize="19" HorizontalAlignment="Center" 
VerticalAlignment="Center" Margin="7" Width="190" Background="#F5F5DC" BorderThickness="2"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Поиск" FontSize="19" HorizontalAlignment="Center" 
VerticalAlignment="Center" Margin="7"/>
                <TextBox x:Name="SearchTextBox"
         Width="190"
         Height="30"
         TextChanged="SearchTextBox_TextChanged"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="5" Orientation="Horizontal">
            <ComboBox x:Name="CategoryFilterComboBox"
          Width="250"
          Height="90"
          Margin="0 0 10 0"
          SelectionChanged="CategoryFilterComboBox_SelectionChanged">
                <ComboBoxItem Content="Без фильтра" IsSelected="True"/>
                <ComboBoxItem Content="По жанру"/>
                <ComboBoxItem Content="По статусу"/>
                <ComboBoxItem Content="По минимальному рейтингу"/>
                
            </ComboBox>
            <ComboBox x:Name="SortComboBox"
          Width="290"
          Height="90"
          Margin="0 0 10 0"
          SelectionChanged="SortComboBox_SelectionChanged">
                <ComboBoxItem Content="Без сортировки" IsSelected="True"/>
                <ComboBoxItem Content="По дате(по возрастанию)"/>
                <ComboBoxItem Content="По дате(по убыванию)"/>
                <ComboBoxItem Content="По статусу"/>
                <ComboBoxItem Content="По категории"/>
            </ComboBox>
        </StackPanel>
    </Grid>
</Window>
