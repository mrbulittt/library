<Window x:Class="library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:library"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#F5F5DC">
   
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="105*" />
            <ColumnDefinition Width="88*"/>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="149*"/>
            <ColumnDefinition Width="174*"/>
            <ColumnDefinition Width="203*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="297*"/>
            <RowDefinition Height="97*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Название" 
                   FontSize="19" HorizontalAlignment="Center" 
                   VerticalAlignment="Center" Height="26" Width="83"/>
        <TextBlock Text="Автор" 
           Grid.Column="1" 
           FontSize="19" HorizontalAlignment="Center" 
           VerticalAlignment="Center" Height="26" Width="53"/>
        <TextBlock Text="Жанр" 
           Grid.Column="2" 
           FontSize="19" HorizontalAlignment="Center" 
           VerticalAlignment="Center" Height="26" Width="48"/>
        <TextBlock Text="Личный рейтинг" 
           Grid.Column="3" 
           FontSize="19" HorizontalAlignment="Center" 
           VerticalAlignment="Center" Height="26" Width="144"/>
        <TextBlock Text="Дата добавления" 
           Grid.Column="4" 
           FontSize="19" HorizontalAlignment="Center" 
           VerticalAlignment="Center" Height="26" Width="164"/>
        <ListBox Background="#F5F5DC" Grid.Row="1" Grid.ColumnSpan="5" x:Name="LibrListLb">
            
        </ListBox>

        <StackPanel Grid.Column="5" Grid.RowSpan="3">
            
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="5">
            
        </StackPanel>
    </Grid>
</Window>
